<nav class="pure-menu pure-menu-horizontal">
  <ul class="pure-menu-list">
    <li class="pure-menu-item"><a class="pure-menu-link" href="/">Compose</a></li>
    <li class="pure-menu-item pure-menu-selected"><a class="pure-menu-link" href="/settings">Settings</a></li>
  </ul>
</nav>

<main>
  <h2>Settings</h2>

  <form class="pure-form pure-form-stacked" name="settings" id="settings" action="/settings" method="POST">
    <fieldset>
      <label for="autoreply_mode">
        Autoreply mode
      </label>

      <p class="pure-form-message">Check this box to enable automated replies.</p>
      <input id="autoreply_mode" name="autoreply_mode" type="checkbox" <% if @autoreply_mode %>checked="checked"<% end %>>
    </fieldset>

    <fieldset>
      <label for="automated_reply">
        Automated reply message
      </label>

      <p class="pure-form-message">The tool&rsquo;s response to any incoming message.</p>
      <textarea id="automated_reply" name="automated_reply"><%= @automated_reply %></textarea>
    </fieldset>

    <fieldset>
      <label for="replies_forwardee">
        Replies forwardee
      </label>

      <p class="pure-form-message">Incoming messages will be forwarded to this phone number. The field may be left blank.</p>
      <input id="replies_forwardee" name="replies_forwardee" type="text" value="<%= CGI.escapeHTML(@replies_forwardee) %>">
    </fieldset>

    <input class="pure-button pure-button-primary" type="submit" value="Update settings">
  </form>
</main>